{
    "editor.suggestSelection": "first",
    "editor.fontFamily": "Monaco, Menlo, 'Courier New', monospace, 'Source Code Pro for Powerline'",
    "editor.inlineSuggest.enabled": true,
    "editor.glyphMargin": false,
    "editor.fontSize": 13,
    "editor.formatOnSave": false,
    "editor.showFoldingControls": "never",
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": true,
    "terminal.integrated.macOptionIsMeta": true,
    "extensions.ignoreRecommendations": false,
    "editor.inlayHints.enabled": "off",
    "files.trimTrailingWhitespace": true,
    "window.menuBarVisibility": "toggle",
    "remote.SSH.LocalServerDownload": true,

    "python.languageServer": "Default",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "qtForPython.path.qmlscene": "/usr/local/opt/qt/bin//qmlscene",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // terminal
    //
    // Allow use ctrl-k in terminal.
    "terminal.integrated.allowChords": false,

    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "settingsSync.ignoredSettings": [],
    "settingsSync.ignoredExtensions": [],

    // gitlens
    "gitlens.codeLens.enabled": false,

    // emacs-mcx
    "emacs-mcx.cursorMoveOnFindWidget": true,

    // golang
    "go.useLanguageServer": true,
    "go.formatTool": "gofmt",
}