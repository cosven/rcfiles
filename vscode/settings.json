{
    "editor.suggestSelection": "first",
    "editor.fontFamily": "Monaco, 'Cascadia Code PL', 'Segoe UI Emoji', monospace, 'Source Code Pro for Powerline'",
    "editor.inlineSuggest.enabled": true,
    "editor.glyphMargin": false,
    // "editor.fontSize": 12,
    "editor.formatOnSave": false,
    "editor.lineNumbers": "on",
    "editor.showFoldingControls": "never",
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": true,
    "extensions.ignoreRecommendations": false,
    "editor.inlayHints.enabled": "off",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",

    "python.languageServer": "Default",

    // terminal
    //
    // Allow use ctrl-k in terminal.
    "terminal.integrated.allowChords": false,
    "terminal.integrated.macOptionIsMeta": true,
    // Allow to use ctrl-f in terminal on linux.
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.profiles.windows":{
        "Git Bash":{"path":"C:\\Program Files\\Git\\bin\\bash.exe"},
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.defaultProfile.osx": "bash",
    // Controls whether to force selection when using Option+click on macOS.
    // This will force a regular (line) selection and disallow the use of column selection mode.
    // This enables copying and pasting using the regular terminal selection, for example,
    // when mouse mode is enabled in tmux.
    "terminal.integrated.macOptionClickForcesSelection": true,

    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "settingsSync.ignoredSettings": [

    ],
    "settingsSync.ignoredExtensions": [
        "ms-python.vscode-pylance",
        "ms-python.python"
    ],

    // gitlens
    "gitlens.codeLens.enabled": false,

    // vim
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-j>": false
    },

    // golang
    "go.useLanguageServer": true,
    "go.formatTool": "gofmt",

    "[python]": {
        "editor.formatOnType": true
    },
    "window.menuBarVisibility": "toggle",
    "redhat.telemetry.enabled": true,
    "java.jdt.ls.vmargs": "",
    "editor.wordWrap": "off",
    "workbench.colorTheme": "Default Dark+",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false
    },
}
