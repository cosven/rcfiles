{
    "editor.suggestSelection": "first",
    "editor.fontFamily": "Monaco, Menlo, 'Cascadia Code PL', 'Segoe UI Emoji', monospace, 'Source Code Pro for Powerline'",
    "editor.inlineSuggest.enabled": true,
    "editor.glyphMargin": false,
    "editor.fontSize": 13,
    "editor.formatOnSave": false,
    "editor.lineNumbers": "on",
    "editor.showFoldingControls": "never",
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": true,
    "extensions.ignoreRecommendations": false,
    "editor.inlayHints.enabled": "off",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.encoding": "utf8",
    "remote.SSH.LocalServerDownload": true,

    "python.languageServer": "Default",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "qtForPython.path.qmlscene": "/usr/local/opt/qt/bin//qmlscene",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // terminal
    //
    // Allow use ctrl-k in terminal.
    "terminal.integrated.allowChords": false,
    "terminal.integrated.macOptionIsMeta": true,
    // Allow to use ctrl-f in terminal on linux.
    "terminal.integrated.sendKeybindingsToShell": true,

    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "settingsSync.ignoredSettings": [

    ],
    "settingsSync.ignoredExtensions": [
        "ms-python.vscode-pylance",
        "ms-python.python"
    ],

    // gitlens
    "gitlens.codeLens.enabled": false,

    // vim
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-d>": false,
        "<C-j>": false
    },

    // golang
    "go.useLanguageServer": true,
    "go.formatTool": "gofmt",

    "[python]": {
        "editor.formatOnType": true
    },
    "terminal.integrated.profiles.windows":{
        "Git Bash":{"path":"C:\\Program Files\\Git\\bin\\bash.exe"},
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash"
}
