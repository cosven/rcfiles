#!/usr/bin/env bash

if [[ -h `pwd` ]]; then
    cd $(readlink `pwd`)
fi
[ -d .git ] || git rev-parse --git-dir > /dev/null 2>&1
if [[ $? -ne 0 ]]; then
    echo "Not a git repository"
    exit 1
fi

remote="origin"
branch=`git branch --show`
git remote -v | grep upstream > /dev/null
if [ $? -eq 0 ]; then
    remote="upstream"
fi

last_commit_id=`git rev-parse HEAD`
echo "Remote: $remote"
echo "Branch: $branch"
echo "Current: $last_commit_id"
echo -n "Fetch $remote:$branch..."
git fetch -q $remote $branch
echo "ok"
changes_length=$(git status -s | wc -l)
need_pop_stash=false
if [[ $changes_length -gt 0 ]]; then
    echo -n "Stash..."
    git stash > /dev/null
    echo "ok"
    need_pop_stash=true
fi
echo -n "Rebase..."
git rebase -q $remote/$branch
echo "ok"
if [[ "$need_pop_stash" == "true" ]]; then
    echo -n "Pop stash..."
    git stash pop > /dev/null
    echo "ok"
fi
current_commit_id=`git rev-parse HEAD`
if [[ "$last_commit_id" != "$current_commit_id" ]]; then
    echo "Changes are as follows::"
    echo "------------------------"
    git log $last_commit_id..HEAD --oneline
    echo "------------------------"
else
    echo "No change."
fi
echo -e '🎉🎉🎉🎉🎉🎉🎉'

